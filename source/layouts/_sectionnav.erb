<nav class="section">
  <h2>Section Navigation</h2>
  <p><%= nav_link('Tips for Getting Started with Web Accessibility', 'index.html') %></p>
  <ul>
    <% {'designing' => 'designing-small', 'writing' => 'writing', 'developing' => 'developing', 'evaluating' => 'evaluating', 'managing' => 'managing', 'advocating' => 'advocating'}.each do |guide, icon| %>
      <li>
        <svg><use xlink:href="#<%= icon %>"></svg>
      <% if is_current(guide + '.html') %>
        <%= guide.capitalize %>
      <% else %>
        <a href="<%= guide %>.html"><%= guide.capitalize %></a>
      <% end %>
      </li>
    <% end %>
  </ul>
</nav>
